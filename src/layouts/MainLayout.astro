---
import "../styles/global.css";
import Header from "../components/layout/Header.astro";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Munakuyki - Regalos y detalles especiales para toda ocasi√≥n",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Munakuyki</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <p>
            &copy; {new Date().getFullYear()} Munakuyki. Todos los derechos reservados.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
